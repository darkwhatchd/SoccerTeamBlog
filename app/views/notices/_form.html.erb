<%= form_with(model: notice) do |form| %>
  <% if notice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(notice.errors.count, "error") %> prohibited this notice from being saved:</h2>

      <ul>
        <% notice.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, class: 'label' %>
    <div class='control'>
      <%= form.text_field :title %>
    </div>
  </div>

  <div class="field">
    <%= form.label :description, class: 'label' %>
    <div class='control'>
      <%= form.text_area :description, size: '60x5' %>
    </div>
  </div>

  <div class="field">
    <%= form.label :user_id, class: 'label' %>
    <div class='control'>
      <%= collection_select(:notice, :user_id, User.all, :id, :name) %>
    </div>
  </div>

  <div class='field'>
    <%= form.label :cover, class: 'label' %>
    <div class='control'>
      <%= form.file_field :cover %>
    </div>
  </div>

  <div class="field">
    <%= form.label :publish_at, class: 'label' %>
    <div class='control'>
      <%= form.datetime_select :publish_at %>
    </div>
  </div>

  <div class="field">
    <%= form.label :body, class: 'label' %>
    <div class='control'>
      <%= form.rich_text_area :body, class: 'form-control' %>
    </div>
  </div>
  <br>
  <div class="actions">
    <div class='control'>
      <button class='button is-dark'>
        <% form.submit %>
        Criar not√≠cia
      </button>
    </div>
  </div>
<% end %>
