<% res = get_matchs %>

<% res.each do |match| %>
  <div class='column'>
    <div class='box'>
      <div class='container mb-3 has-text-justified'>
        <% if match['match_date'] == Time.now.strftime('%Y-%m-%d') %>
          <h1 class='subtitle is-size-7'>Hoje - <%= match['match_time'] %></h1>
        <% elsif match['match_date'] == (Time.now + 1.days).strftime('%Y-%m-%d') %>
          <h1 class='subtitle is-size-7'>Amanh√£ - <%= match['match_time'] %></h1>
        <% elsif match['match_date'] == (Time.now - 1.days).strftime('%Y-%m-%d') %>
          <h1 class='subtitle is-size-7'>Ontem</h1>
        <% else %>
          <h1 class='subtitle is-size-7'><%= Time.parse(match['match_date']).strftime('%d/%m/%y') %> - <%= match['match_time'] %></h1>
        <% end %>
        
      </div>
      <div class="media">
        <div class="media-left">
          <%= image_tag("#{match['team_home_badge']}", size: '24x24') %>
          <%= match['match_hometeam_name'] %>
        </div>
        <div class="media-content has-text-right">
          <%= match['match_hometeam_score'] %>
        </div>
      </div>
      <div class="media">
        <div class="media-left">
          <%= image_tag("#{match['team_away_badge']}", size: '24x24') %>
          <%= match['match_awayteam_name'] %>
        </div>
        <div class="media-content has-text-right">
          <%= match['match_awayteam_score'] %>
        </div>
      </div>
    </div>
  </div>
<% end %>